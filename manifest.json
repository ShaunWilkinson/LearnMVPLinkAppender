{
	"manifest_version": 3,
	"name": "MVP Link Auto-Tracker",
	"version": "1.1",
	"description": "Appends your MVP tracking ID to Microsoft Learn links.",
	"permissions": [
	  "declarativeNetRequest",
	  "declarativeNetRequestWithHostAccess",
	  "storage"
	],
	"host_permissions": [
	  "*://learn.microsoft.com/*"
	],
	"background": {
	  "service_worker": "background.js"
	},
	"options_page": "options.html",
	"action": {
	  "default_title": "MVP Tracker Active"
	}
  }
  